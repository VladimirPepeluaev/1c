Результат = Запрос.Выполнить().Выгрузить();
    Если Результат.Количество() > 0 Тогда
		РодительЭталон = Результат[0].Ссылка;
	КонецЕсли;
		
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
		|	Контрагенты.Ссылка
		|ИЗ
		|	Справочник.Контрагенты КАК Контрагенты
		|ГДЕ
		|	(Контрагенты.Родитель В ИЕРАРХИИ (&РодительВГО)
		|			ИЛИ Контрагенты.Родитель В ИЕРАРХИИ (&РодительЭталон))
		|	И Контрагенты.Ссылка = &Ссылка";

	Запрос.УстановитьПараметр("РодительВГО", РодительВГО);
	Запрос.УстановитьПараметр("РодительЭталон", РодительЭталон);
	
	Если Ссылка <> Неопределено Тогда
		Запрос.УстановитьПараметр("Ссылка", Ссылка);
	Иначе
		Запрос.УстановитьПараметр("Ссылка", Объект.Ссылка);
	КонецЕсли;

	Результат = Запрос.Выполнить().Выгрузить()
